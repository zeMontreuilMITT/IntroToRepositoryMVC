@model IntroToRepositoryMVC.Models.ViewModels.CreateRoleVM

<h1>Create Role</h1>

<form asp-action="CreateRole" method="post">
    <div>
        <label>Actor</label>
        <select asp-for="ActorId" asp-items="Model.Actors"></select>
    </div>
    <div>
        <label>Movie</label>
        <select asp-for="MovieId" asp-items="Model.Movies"></select>
    </div>
    <div>
        <label>Role Name</label>
        <input asp-for="RoleName" />
    </div>
    <input type="submit" value="Add Role" />
</form>
